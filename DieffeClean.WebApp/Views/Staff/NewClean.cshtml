@model DieffeClean.Presentation.Model.Staff.NewStaffViewModel

@{
    ViewData["Title"] = "Registra impresa pulizie";
}

<div class="header pb-6 d-flex align-items-center bg-dieffe" style="min-height: 150px; ">
<!-- Mask -->
    <span class="mask  opacity-8"></span>
    <!-- Header container -->
    <div class="container-fluid d-flex align-items-center">
    <div class="row">
        <div style="position: relative; left: 5%;">
        <h2 style="color: white;">Nuova impresa pulizie</h2>
        </div>
    </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-xl-8-a">
            <div class="card">
            <form method="post">
                <div class="card-header">
                    <div class="row align-items-center">
                    <div class="col-8">
                        <h3 class="mb-0">Registra nuova impresa pulizie</h3>
                    </div>
                    <div class="col-4 text-right">
                        <button type="submit" class="btn btn-sm btn-dieffe">Salva</button>
                    </div>
                    </div>
                </div>
                <div class="card-body">
                    <h6 class="heading-small text-muted mb-4">Inserire dati impresa pulizie</h6>
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-username">Username</label>
                                    <input asp-for="Staff.UserName" type="string"  id="input-username" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-email">Email</label>
                                    <input asp-for="Staff.Email" type="string" id="input-email" class="form-control" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-apartament">Seleziona appartamenti</label>
                                    <div style="max-height: 150px; overflow-y: auto; border: 1px solid #ccc; padding: 10px; border-radius:  4px;">
                                        @foreach (var apartment in Model.Apartments)
                                        {
                                            <div class="form-check">
                                                <input class="form-check-input" style="cursor: pointer;" type="checkbox" id="apartment-@apartment.Id" name="SelectedApartments" value="@apartment.Id">
                                                <label class="form-check-label" style="cursor: pointer;" for="apartment-@apartment.Id">@apartment.Name</label>
                                            </div>
                                        }
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            </div>
        </div>
    </div>
</div>
