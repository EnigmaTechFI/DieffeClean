@model DieffeClean.Presentation.Model.Apartment.CreateApartmentViewModel

@{
    ViewData["Title"] = "Modifica appartamento";
}

<div class="header pb-6 d-flex align-items-center bg-dieffe" style="min-height: 150px; ">
<!-- Mask -->
    <span class="mask  opacity-8"></span>
    <!-- Header container -->
    <div class="container-fluid d-flex align-items-center">
    <div class="row">
        <div style="position: relative; left: 5%;">
        <h2 style="color: white;">Appartamento</h2>
        </div>
    </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-xl-8-a">
            <div class="card">
                <form method="post">
                    @Html.HiddenFor(model => model.Apartment.Id)
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col-8">
                                <h3 class="mb-0">Modifica appartamento</h3>
                            </div>
                            <div class="col-4 text-right">
                                <button type="submit" class="btn btn-sm btn-dieffe">Salva</button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <h6 class="heading-small text-muted mb-4">Inserire dati appartamento</h6>
                        <div class="pl-lg-4">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-name">Nome dell'appartamento </label>
                                        <input asp-for="Apartment.Name" type="text" id="input-name" class="form-control" required>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-city">Indirizzo</label>
                                        <input asp-for="Apartment.Address" type="text" id="input-address" class="form-control" required>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-city">Nazione</label>
                                        <input asp-for="Apartment.Nation" type="text" id="input-nation" class="form-control" required>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-province">Provincia</label>
                                        <input asp-for="Apartment.Province" type="text" id="input-province" class="form-control" required>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-city">Città</label>
                                        <input asp-for="Apartment.City" type="text" id="input-city" class="form-control" required>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-cap">Codice Postale</label>
                                        <input min="0" asp-for="Apartment.ZipCode" type="number" id="input-cap" class="form-control" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
